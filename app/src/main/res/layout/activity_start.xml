<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_back"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/back"
            android:textSize="13sp"

            android:textColor="#000000"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_save"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/save"
            android:textSize="13sp"

            android:layout_alignParentEnd="true"
            android:textColor="#000000"


            app:layout_constraintTop_toTopOf="parent" />



    </RelativeLayout>

 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

     <ImageView
         android:layout_marginStart="0dp"
         android:layout_marginTop="0dp"
         android:id="@+id/imageView"
         android:layout_width="383dp"
         android:layout_height="407dp"
         app:srcCompat="?android:attr/actionModeCutDrawable" />
 </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_weight="8.5">


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/button_povorot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_povorot"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_filter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_filter1"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/button_povorot"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_mash"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_mashtab"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/button_filter"
                app:layout_constraintTop_toTopOf="parent" />



            <Button
                android:id="@+id/button_nerezk"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_nerezk"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/button_mash"
                app:layout_constraintTop_toTopOf="parent" />





            <TextView
                android:id="@+id/textView1"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="@string/povoroti"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/button_povorot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="@string/filters"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Масштаб"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:text="Нерезкая маскировка"
                android:textAlignment="center"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />



        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

</LinearLayout>