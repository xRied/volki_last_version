<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_back"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="назад"
            android:textSize="13sp"

            android:textColor="#000000"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="ок"
            android:textSize="13sp"

            android:layout_alignParentRight="true"
            android:textColor="#000000"


            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:id="@+id/imageView"
            android:layout_width="383dp"
            android:layout_height="407dp"
            app:srcCompat="?android:attr/actionModeCutDrawable" />
    </RelativeLayout>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8.5">


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/rel_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_rel"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cb_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_ch_b"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/rel_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cetk_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_chetk"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/cb_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/purple_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_purple"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/cetk_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/sepia_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_sepia"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/purple_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/neg_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_negativ"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/sepia_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tis_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_tisn"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""


                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintStart_toEndOf="@+id/neg_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/aqua_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_aqua"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text=""

                android:textColor="#000000"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tis_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Рельеф"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/rel_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Ч/Б"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Чёткость"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Purple"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Сепия"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Негатив"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Тиснение"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:text="Акварель"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

</LinearLayout>